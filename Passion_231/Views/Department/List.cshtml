@model IEnumerable<Passion_231.Models.DepartmentDto>

@{
    ViewBag.Title = "View";
}

<h2 style="padding: 30px 30px;">Departments List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentClass)
        </th>
        <th></th>
    </tr>
    
        @foreach (var item in Model)
        {

            <tr class="second">

                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentClass)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DepartmentID })

                </td>
            </tr>

        }
    

</table>

