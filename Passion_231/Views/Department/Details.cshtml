@model Passion_231.Models.ViewModels.ShowDepartment

@{
    ViewBag.Title = "Details";
}

<h4>Department @Model.department.DepartmentName</h4>
<div style="overflow:hidden;">
    <div style="float:left; margin-right:2%; width:49%;">

        <div>@Html.ActionLink("Delete", "DeleteConfirm", new { id = Model.department.DepartmentID })</div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.department.DepartmentName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.department.DepartmentName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.department.DepartmentClass)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.department.DepartmentClass)
            </dd>

        </dl>
    </div>
    <div style="float:left;margin-right:0%; width:49%;">
        <div>
            <h4>Pets:</h4>
            <div>
                @foreach (var pet in Model.departmentpets)
                {
                    <div>
                        @Html.ActionLink(
                        pet.PetName + " " + pet.PetType,
                        "Details",
                        "Pet",
                        new { id = pet.PetID },
                        new { })
                    </div>
                }
            </div>
        </div>
        <div>
            <h4>Employees:</h4>
            <div>
                @foreach (var employee in Model.departmentemployees)
                {
                    <div>
                        @Html.ActionLink(
                        employee.EmployeeFirstName,
                        "Details",
                        "Employee",
                        new { id = employee.EmployeeID },
                        new { })
                    </div>
                }
            </div>
        </div>
    </div>
    <div style="clear:both;"></div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.department.DepartmentID }) |
    @Html.ActionLink("Back to List", "List")
</p>

