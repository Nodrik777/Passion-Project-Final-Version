@model Passion_231.Models.EmployeeDto

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.EmployeeFirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmployeeLastName)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.HireDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmployeeBio)
        </dd>
        
    </dl>

    @using (Html.BeginForm("Delete", "Department", new { id=Model.EmployeeID})) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>
